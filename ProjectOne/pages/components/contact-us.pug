include common/tags
include common/blog
include common/form

mixin socialMediaItems
  -
    const items = [
      {
        name: 'facebook',
        icon: 'fa-brands fa-facebook-f'
      },
      {
        name: 'twitter',
        icon: 'fa-brands fa-twitter'
      },
      {
        name: 'instagram',
        icon: 'fa-brands fa-instagram'
      },
      {
        name: 'google+',
        icon: 'fa-brands fa-google-plus-g'
      },
      {
        name: 'pinterest',
        icon: 'fa-brands fa-pinterest'
      },
      {
        name: 'linkedin',
        icon: 'fa-brands fa-linkedin-in'
      }
    ];

  .contact-us__social-media
    ul.contact-us__social-media-items 
      each item in items
        li.contact-us__social-media-item
          i(class=`${item.icon} contact__icon`)
          span.contact-us__icon-name= item.name

mixin tagItems
  -
    const items = [
      "Đồng hồ", "Túi", "Phụ kiện", "Đồng hồ", "Túi", 
      "Giày", "Sandal", "Áo sơ mi", "Nước hoa", "Giày", "Sandal",
      "Trẻ em", "Thời trang nữ", "Trẻ em", "Thời trang nữ"
    ];

  .contact-us__tags-box
    +tags(items)

mixin descriptionAboutUs
  - const para = "Hi, chào các nàng... sau khá nhiều lời hứa hão thì hôm nay tớ quay lại hâm nóng cái Blog này vào một ngày đầu hè nóng oi bức, khi mà dân tình xô nhau đi tắm Free để giải nhiệt. Hi, chào các nàng ... sau khá nhiều lời hứa hão thì hôm nay tớ quay lại hâm nóng cái Blog này vào một ngày đầu hè nóng oi bức, khi mà dân tình xô nhau đi tắm Free để giải nhiệt.sau khá nhiều lời hứa hão thì hôm nay tớ quay lại hâm nóng cái Blog này vào một ngày đầu hè nóng oi bức, khi mà dân tình xô nhau đi tắm Free để giải nhiệt.";
  - const title = "Giới thiệu chung về Mỹ phẩm Handmade mandala";

  .contact-us__card.contact-us__about-us
    h2.contact-us__title Về chúng tôi
    .contact-us__description
      .contact-us__logo
        img(src="/assets/images/common/logo.png", alt="logo")
      h5.contact-us__description-title= title
      p.contact-us__para= para
      a.contact-us__link Xem thêm

mixin descriptionBlog
  -
    const item = {
      image: '/assets/images/blog/2.png',
      title: 'Review son kem Bourjois Velvet',
      para: 'Hi, chào các nàng ... sau khá nhiều lời hứa hão thì hôm nay tớ quay lại hâm nóng cái Blog nàyvào một ngày đầu hè nóng oi bức, khi mà dân tình xô nhau đi tâm Free để giải nhiệt.',
      author: 'NamTran',
      time: '27 / 05 / 2015',
      commentTotal: '23 bình luận'
    };

  .contact-us__card.contact-us__blog
    h2.contact-us__title Blog
    +blog(item)

mixin descriptionSendEmail
  -
    const form = {
      ctaTitle: 'Gửi email để nhận những ưu đãi mới nhất',
      input:{
        type: 'text',
        name: 'input-contact',
        placeholder: 'Email của bạn'
      },
      button:{
        text: 'Gửi',
        classes: 'btn-black form-contact-us__cta-send',
      }
    };

  .contact-us__card.contact__send-email
    .contact-us__card-top
      h2.contact-us__title Gửi email cho chúng tôi
      .contact-us__description
        +formContact(form)
    .contact-us__card-bottom
      h2.contact-us__title Tag sản phẩm
      .contact-us__description
        +tagItems

mixin contact
  section.contact-us
    +socialMediaItems
    .contact-us__content
      +descriptionAboutUs
      +descriptionBlog
      +descriptionSendEmail
